html {
	margin: 0;
	padding: 0;
	font-size: 62.5%;
}

body {
	margin: 0;
	padding: 0;
}

a {
	color: black;
}

a:visited {
	color: black;
}

.menu {
	position: absolute;
	right: 0;
	top: 0;
	font-size: 9.6mm;
	letter-spacing: 2mm;
	padding: 2mm;

	i:hover {
		text-shadow: 0 0 4px rgba(255, 255, 0, 0.5);
		transform: scale(1.10);
		transition-duration: 0.25s;
	}

	.fa-twitter:hover {
		text-shadow: 0 0 4px rgba(0, 0, 255, 0.5);
	}

	.fa-meetup:hover {
		text-shadow: 0 0 4px rgba(255, 0, 0, 0.5);
	}

}

.main-content {
	background: #222 url(./bg.jpg) no-repeat center center
	background-size: cover;
	min-height: 100vh;
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;

	> header {
		color: white;

		h1, h2 {
			text-align: center;
		}

		h1 {
			font-size: 5rem;
			letter-spacing: -1px;
			font-family: "Open Sans", sans-serif;
			font-weight: 700;
			margin: 0;
			padding: 0;
		}

		h2 {
			margin: 0;
			font-size: 2rem;
			line-height: 1.5em;
			font-weight: 400;
			font-family: "Merriweather", serif;
			letter-spacing: 0.01rem;
		}
	}
}
